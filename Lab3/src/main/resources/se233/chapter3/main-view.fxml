<FlowPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se233.chapter3.controller.MainViewController">
   <children>
      <MenuBar prefHeight="20.0" prefWidth="400.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="Close" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane prefHeight="240.0" prefWidth="200.0">

            <Label layoutX="20.0" layoutY="20.0" text="Drop PDF files below: " />
             <ListView  fx:id="inputListView" layoutX="10" layoutY="45.0" prefHeight="150" prefWidth="180" style="-fx-border-color: black;" />
             <Button  fx:id="startButton" layoutX="20.0" layoutY="200.0" prefHeight="20.0" prefWidth="156.0" text="Start Indexing" />

      </AnchorPane>
      <Pane>
            <ListView fx:id="listView" prefHeight="240.0" prefWidth="200.0" />
      </Pane>
   </children>
</FlowPane>
